      #container-starships.invisible
        .select
          p.select__title Selecciona una Nave
          select.select__options#select-starships
            option(value="all") All
            option(value="executor") Executor
            option(value="sentinel-class") Sentinel-class landing craft
            option(value="death") Death Star
            option(value="millennium") Millennium Falcom
            option(value="y-wing") Y-wing
            option(value="x-wing") X-wing
            option(value="tie") TIE Advance x1
            option(value="slave") Slave 1
            option(value="imperial") Imperial shutter
            option(value="ef76") EF76 Nebulon-B escort frigate
        #container-cards-starships

    script(src="./dist/js/main.js")
